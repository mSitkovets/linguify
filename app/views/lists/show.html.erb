 <article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>
  <h2>Your Play Later List</h2>
  <table>
    <tr>
      <th> Quiz </th>
      <th> Language </th>
    </tr>
    <% @list.line_items.each do |line_item| %> 
      <tr>
        <td><%= line_item.quiz.title %></td>
        <td class="language"><%= line_item.quiz.language_learning %></td>
        <td><%= link_to 'Remove', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>  
      </tr>
    <% end %> 
</table>
<%= button_to 'Empty list', @list, 
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</article>