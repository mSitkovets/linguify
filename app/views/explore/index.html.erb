<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>
  <h1>Search Through Quizzes</h1>
  <ul class="catalog">
    <% cache @quizzes do %>
      <% @quizzes.each do |quiz| %>
        <% cache quiz do %>
          <li>
            <h2><%= quiz.title %></h2>
            <p>
              <%= sanitize(quiz.description) %> </p>
            <div class="lang_learn"> 
              <p><b>Learn: </b><%= quiz.language_learning %></p>
            </div> 
            <div class="instr_lang"> 
              <p><b>From: </b><%= quiz.instruction_language %></p>
            </div> 
            <div class="difficulty"> 
              <p><b>Level: </b><%= quiz.difficulty_level %></p>
            </div> 
            <div class="button">
              <%= button_to 'Play Now', quizzes_path(quiz_id: quiz) %>
            </div>
            <div class="button">
              <%= button_to 'Add to Play Later', line_items_path(quiz_id: quiz), remote: true %>
            </div>
          </li>
      <% end %>
    <% end %> 
  <% end %>
</ul>