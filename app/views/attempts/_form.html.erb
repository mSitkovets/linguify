<%= form_with(model: [quiz, attempt], local: true, method: :patch) do |form| %>

  <h1><strong><%= @attempt.quiz.title %></strong></h1>
  <% counter = 1 %>
  <% @attempt.quiz.questions.each do |question| %>
    <h2><strong>Q<%=counter%>: <%= question.question%></strong></h2>
    <% @answers[0].each do |answer| %>
       <div style= "display:flex; flex-direction: row;"> 
        <%= radio_button("question[#{question.id}]", "answer", answer[0]) %>
        <%= label_tag(:answer, answer[0]) %>
       </div>
    <% end %>
    <% counter += 1 %>
    <% @answers.shift %>
  <% end %>
  <div class="actions">
    <%= form.submit "Submit Quiz", remote: true %> 
  </div>
<% end %>


