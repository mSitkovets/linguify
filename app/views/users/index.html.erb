    <tr>
      <th>Username</th>
      <th>Num of Followers</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @most_followed_users.each do |key, value| %>
      <tr>
        <td><%= key %></td>
        <td><%= value %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Users Who Most Recently Made a New Friend</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @most_recent_to_add_friend.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.email %></td>
